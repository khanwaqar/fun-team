{% extends 'base.html.twig' %}

{% block title %}Expenses{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2>Expenses</h2>
    <a href="{{ path('admin_expense_create') }}" class="btn btn-primary mb-3">Add New Expense</a>

    <div class="card">
        <div class="card-header bg-white fw-bold">
            Total Expenses: PKR {{ totalExpenses|number_format(0, '.', ',') }}
        </div>
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Amount (PKR)</th>
                        <th>Category</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    {% for expense in expenses %}
                        <tr>
                            <td>{{ expense.title }}</td>
                            <td>{{ expense.amount|number_format(0, '.', ',') }}</td>
                            <td>{{ expense.category }}</td>
                            <td>{{ expense.date ? expense.date|date('d M Y') : '' }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted">No expenses found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
