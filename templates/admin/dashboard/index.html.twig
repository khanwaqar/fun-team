{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="d-flex" id="wrapper">
    {% include 'admin/_partials/_sidebar.html.twig' %}

    <div id="page-content-wrapper" class="flex-grow-1">
        {% include 'admin/_partials/_navbar.html.twig' %}
        <div class="container mt-4">
            <h2 class="mb-4 fw-bold"><i class="bi bi-speedometer2 me-2"></i>Super Admin Dashboard</h2>
            <div class="row g-4 mt-3">
                <!-- Total Users -->
                <div class="col-md-3">
                    <a href="{{ path('admin_user_index') }}" class="text-decoration-none">
                        <div class="card text-white bg-primary shadow-sm dashboard-card h-100">
                            <div class="card-body d-flex flex-column align-items-center">
                                <i class="bi bi-people display-4 mb-2"></i>
                                <h5 class="card-title">Total Users</h5>
                                <p class="card-text display-6 fw-bold">{{ userCount }}</p>
                            </div>
                        </div>
                    </a>
                </div>
                <!-- Total Contributions -->
                <div class="col-md-3">
                    <a href="{{ path('admin_contribution_index') }}" class="text-decoration-none">
                        <div class="card text-white bg-success shadow-sm dashboard-card h-100">
                            <div class="card-body d-flex flex-column align-items-center">
                                <i class="bi bi-cash-stack display-4 mb-2"></i>
                                <h5 class="card-title">Contributions</h5>
                                <p class="card-text display-6 fw-bold">{{ contributionCount }}</p>
                            </div>
                        </div>
                    </a>
                </div>
                <!-- Total Events -->
                <div class="col-md-3">
                    <a href="{{ path('admin_event_index') }}" class="text-decoration-none">
                        <div class="card text-white bg-warning shadow-sm dashboard-card h-100">
                            <div class="card-body d-flex flex-column align-items-center">
                                <i class="bi bi-calendar-event display-4 mb-2"></i>
                                <h5 class="card-title">Events</h5>
                                <p class="card-text display-6 fw-bold">{{ eventCount }}</p>
                            </div>
                        </div>
                    </a>
                </div>
                <!-- Active Polls -->
                <div class="col-md-3">
                    <a href="{{ path('admin_poll_index') }}" class="text-decoration-none">
                        <div class="card text-white bg-danger shadow-sm dashboard-card h-100">
                            <div class="card-body d-flex flex-column align-items-center">
                                <i class="bi bi-check2-square display-4 mb-2"></i>
                                <h5 class="card-title">Active Polls</h5>
                                <p class="card-text display-6 fw-bold">{{ activePollCount }}</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <div class="row g-4 mt-4">
                <div class="col-md-3">
                    <div class="card text-white bg-success h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title">Total Paid</h5>
                            <p class="card-text display-6">PKR {{ paidTotal|number_format(0, '.', ',') }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-warning h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title">Total Unpaid</h5>
                            <p class="card-text display-6">PKR {{ unpaidTotal|number_format(0, '.', ',') }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-danger h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title">Total Expenses</h5>
                            <p class="card-text display-6">PKR {{ expensesTotal|number_format(0, '.', ',') }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-primary h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title">Current Balance</h5>
                            <p class="card-text display-6">PKR {{ balanceTotal|number_format(0, '.', ',') }}</p>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Recent Activity -->
            <div class="row mt-5">
                <div class="col-md-6">
                    <h4 class="fw-semibold mb-3"><i class="bi bi-person-lines-fill me-2"></i>Recent Users</h4>
                    <ul class="list-group shadow-sm">
                        {% for u in recentUsers %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>
                                    <i class="bi bi-person-circle me-2 text-primary"></i>
                                    {{ u.name }} <small class="text-muted">({{ u.email }})</small>
                                </span>
                                <span class="badge bg-light text-dark rounded-pill">Joined: {{ u.joinedAt ? u.joinedAt|date('d M Y') : '' }}</span>
                            </li>
                        {% else %}
                            <li class="list-group-item text-muted">No recent users.</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-md-6">
                    <h4 class="fw-semibold mb-3"><i class="bi bi-calendar-week me-2"></i>Recent Events</h4>
                    <ul class="list-group shadow-sm">
                        {% for e in recentEvents %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>
                                    <i class="bi bi-calendar-event me-2 text-warning"></i>
                                    {{ e.title }}
                                </span>
                                <span class="badge bg-light text-dark rounded-pill">{{ e.date ? e.date|date('d M Y H:i') : '' }}</span>
                            </li>
                        {% else %}
                            <li class="list-group-item text-muted">No recent events.</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <h4 class="fw-semibold mb-3"><i class="bi bi-ui-checks-grid me-2"></i>Recent Polls</h4>
                    <ul class="list-group shadow-sm">
                        {% for p in recentPolls %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>
                                    <i class="bi bi-check2-square me-2 text-danger"></i>
                                    {{ p.title }}
                                </span>
                                <span class="badge bg-light text-dark rounded-pill">Status: {{ p.status }}</span>
                            </li>
                        {% else %}
                            <li class="list-group-item text-muted">No recent polls.</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-md-6">
                    <h4 class="fw-semibold mb-3"><i class="bi bi-cash-coin me-2"></i>Recent Contributions</h4>
                    <ul class="list-group shadow-sm">
                        {% for c in recentContributions %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>
                                    <i class="bi bi-cash-stack me-2 text-success"></i>
                                    {{ c.user.name }} - {{ c.month }}
                                </span>
                                <span class="badge bg-light text-dark rounded-pill">{{ c.status }}</span>
                            </li>
                        {% else %}
                            <li class="list-group-item text-muted">No recent contributions.</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .dashboard-card {
        transition: transform 0.15s, box-shadow 0.15s;
        cursor: pointer;
    }
    .dashboard-card:hover {
        transform: translateY(-4px) scale(1.03);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
        opacity: 0.95;
    }
    #wrapper.toggled #sidebar-wrapper {
        margin-left: -260px;
        transition: margin 0.3s;
    }
    #sidebar-wrapper {
        transition: margin 0.3s;
    }
    @media (max-width: 991.98px) {
        #sidebar-wrapper {
            margin-left: -260px;
            position: fixed;
            z-index: 1040;
        }
        #wrapper.toggled #sidebar-wrapper {
            margin-left: 0;
        }
    }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    // Sidebar toggle
    const sidebarToggle = document.getElementById('sidebarToggle');
    const wrapper = document.getElementById('wrapper');
    if (sidebarToggle && wrapper) {
        sidebarToggle.addEventListener('click', () => {
            wrapper.classList.toggle('toggled');
        });
    }
</script>
{% endblock %}