{% extends 'base.html.twig' %}

{% block title %}Polls{% endblock %}

{% block body %}
<div class="d-flex" id="wrapper">
    {% include 'admin/_partials/_sidebar.html.twig' %}

    <div id="page-content-wrapper" class="flex-grow-1">
        {% include 'admin/_partials/_navbar.html.twig' %}
        <div class="container mt-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="fw-bold mb-0"><i class="bi bi-ui-checks-grid me-2"></i>Polls</h2>
                <a href="{{ path('admin_poll_create') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Create Poll
                </a>
            </div>
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Title</th>
                                <th>Event</th>
                                <th>Status</th>
                                <th>End Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for p in polls %}
                            <tr>
                                <td>
                                    <a href="{{ path('admin_poll_show', {id: p.id}) }}" class="fw-semibold text-decoration-none">
                                        {{ p.title }}
                                    </a>
                                </td>
                                <td>{{ p.event ? p.event.title : 'N/A' }}</td>
                                <td>
                                    {% if p.status == 'active' %}
                                        <span class="badge bg-success">Active</span>
                                    {% elseif p.status == 'completed' %}
                                        <span class="badge bg-secondary">Completed</span>
                                    {% else %}
                                        <span class="badge bg-light text-dark">{{ p.status|capitalize }}</span>
                                    {% endif %}
                                </td>
                                <td>{{ p.endDate ? p.endDate|date('d M Y H:i') : 'N/A' }}</td>
                                <td>
                                    <a href="{{ path('admin_poll_show', {id: p.id}) }}" class="btn btn-info btn-sm me-1">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    {# Add more actions if needed #}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted">No polls found.</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .dashboard-card {
        transition: transform 0.15s, box-shadow 0.15s;
        cursor: pointer;
    }
    .dashboard-card:hover {
        transform: translateY(-4px) scale(1.03);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
        opacity: 0.95;
    }
    #wrapper.toggled #sidebar-wrapper {
        margin-left: -260px;
        transition: margin 0.3s;
    }
    #sidebar-wrapper {
        transition: margin 0.3s;
    }
    @media (max-width: 991.98px) {
        #sidebar-wrapper {
            margin-left: -260px;
            position: fixed;
            z-index: 1040;
        }
        #wrapper.toggled #sidebar-wrapper {
            margin-left: 0;
        }
    }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    // Sidebar toggle
    const sidebarToggle = document.getElementById('sidebarToggle');
    const wrapper = document.getElementById('wrapper');
    if (sidebarToggle && wrapper) {
        sidebarToggle.addEventListener('click', () => {
            wrapper.classList.toggle('toggled');
        });
    }
</script>
{% endblock %}